<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".adminActivityMain">

    <TextView
        android:id="@+id/tv_admin_page"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:gravity="center_horizontal"
        android:text="Admin page"
        android:textSize="24dp" />

//Ordered foods will be displayed here
    <TextView
        android:id="@+id/tv_recieved_order_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:layout_marginHorizontal="10dp"
        android:gravity="left"
        android:text="Recieved order message"
        android:textSize="16dp" />


    // Callback message to user about order confirmation
    <EditText
        android:id="@+id/et_callback_message"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="Call back message"
        android:inputType="phone" />

    <Button
        android:id="@+id/btn_admin_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="submit" />


</LinearLayout>