<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".userActivityMain">

    <TextView
        android:id="@+id/tv_user_page"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:gravity="center_horizontal"
        android:text="User page"
        android:textSize="24dp" />

// Status. It waits admin response, and will be
//updated as long as received callback message from admin
    <TextView
        android:id="@+id/tv_order_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:layout_marginHorizontal="10dp"
        android:gravity="left"
        android:text="Order status"
        android:textSize="16dp" />

// Enter food name to order
    <EditText
        android:id="@+id/et_order"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="Send order message "
        android:inputType="phone" />

    <Button
        android:id="@+id/btn_user_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="submit" />


</LinearLayout>
